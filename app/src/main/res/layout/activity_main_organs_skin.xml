<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_organs_brain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ums.sun.umsmedicapp.MainOrgansBrain">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:minHeight="?attr/actionBarSize"
        android:elevation="4dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/backImage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="12dp"
            android:tint="@android:color/white"
            android:src="@drawable/ic_arrow_back_black_24dp"/>

        <TextView
            android:id="@+id/attraction_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="skin"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/attraction_detail_imageview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/main_toolbar"
        android:adjustViewBounds="true"
        android:contentDescription="SampleImage"
        android:scaleType="centerCrop"
        android:src="@drawable/organ_skin"/>

    <TextView
        android:id="@+id/details_txt"
        android:layout_below="@id/attraction_detail_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxLines = "99"
        android:scrollbars = "vertical"
        android:gravity="center"
        android:textSize="18dp"
        android:text="Do you really know or want to know, What is skin? A comprehensive answer is that it is outer covering which protects all the delicate body parts lying underneath it. It is the largest organ of our body which consists of several tissues including sweat glands, hair follicles, and Meissner's corpuscles. Our skin not only provides protection to the internal body parts, but also gives us our sense of touch."/>


</RelativeLayout>
